<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrainTravel" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@drawable/img_window_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorAccent">@color/accent_purple</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#FDFEFF</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TrainTravel" parent="Base.Theme.TrainTravel" />

    <!--Font-->
    <style name="Title40sp">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:lineSpacingExtra">-5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!--Splash screen-->
    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Base.Theme.TrainTravel">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--Button-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_main_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Toggle button-->
    <style name="ToggleButton">
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/toggle_background</item>
    </style>

    <!--Bottom navigation-->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">30dp</item>
    </style>

    <!--Animation-->
    <style name="animation">
        <item name="android:windowEnterAnimation">@animator/slide_up</item>
        <item name="android:windowExitAnimation">@animator/slide_down</item>
    </style>
</resources>